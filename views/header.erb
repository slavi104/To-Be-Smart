  </head>
  <body>
    <div id="logo">
          
    </div>
    <header>
        <nav id="menu">
          <ul>
            <li class="nav-buttons"><a href="index">НАЧАЛО</a></li>
            <li class="nav-buttons"><a href="tests">ТЕСТОВЕ</a></li>
            <li class="nav-buttons"><a href="categories">КАТЕГОРИИ</a></li>
            <li class="nav-buttons"><a href="users">ПОТРЕБИТЕЛИ</a></li>
            <li class="nav-buttons" style="<%= 'display:none;' if !session['logged'] %>">
              <a href="profile"><%= session['user_name'] %></a>
            </li>
            <li class="nav-buttons" style="<%= 'display:none;' if session['logged'] %>" ><a href="registration">РЕГИСТРАЦИЯ</a></li>   
          </ul>
        </nav>
      <aside>
        <div id="login" style="<%= 'display:none;' if session['logged'] %>">
          <form method="POST" action="login" style="text-align: right; margin-top: 15px;">
            <div>
              <label>Имейл:</label><input type="text" id="emaillog" name="emaillog" value="<%= session['email'] %>">
            </div>
            <div>
              <label>Парола:</label><input type="password" id="pass" name="pass">
            </div>
            <span id="login_errors" style="background-color: #FAFFBD;"><%= session['errors'] if session['errors'] != '' %></span>
            <input type="submit" value="Вход">
          </form>
        </div>
        <script type="text/javascript">
        $(document).ready(function(){
          $('#login').on('click', function(){
            $('#login_errors').empty();
          });
          
        });
        </script>
      </aside>
